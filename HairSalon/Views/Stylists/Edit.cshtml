@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h3>Edit info for Stylist: @Html.DisplayFor(model => model.Name)</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  @Html.LabelFor(model => model.Name) 
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Phone_Number) 
  @Html.TextBoxFor(model => model.Phone_Number)
  <br>
  <input type="submit" value="Save" />
}

<br>
